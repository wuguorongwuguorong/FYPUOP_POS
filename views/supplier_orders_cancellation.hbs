{{#extends "base"}}

{{#block "content"}}

<h2 class="mt-4 mb-3">Cancelled Supplier Orders</h2>

{{#if cancelledOrders.length}}
<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>Supplier</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Subtotal</th>
      <th>Cancellation Reason</th>
      <th>Cancellation Date</th>
      <th>Status</th>

    </tr>
  </thead>
  <tbody>
    {{#each cancelledOrders}}
    <tr>
      <td>{{this.supplier_name}}</td>
      <td>{{this.desc_item}}</td>
      <td>{{this.quantity}}</td>
      <td>${{this.unit_price}}</td>
      <td>${{this.subtotal}}</td>
      <td>{{this.notes}}</td>
      <td>{{formatDate this.cancelled_at}}</td>
      <td><span class="badge bg-danger">{{this.status}}</span></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="alert alert-info">There are no cancelled orders at the moment.</div>
{{/if}}
<a href="/supplier-orders/transaction" class="btn btn-secondary mb-3">‚Üê Back to Active Orders</a>


{{/block}}

{{/extends}}