{{#extends "base"}}

{{#block "content"}}
<h2 class="mt-4 mb-3">Order #{{orderId}} - {{supplierName}} ({{shopName}})</h2>
<p><strong>Order Date:</strong> {{formatDate orderDate}}</p>

<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>SKU</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Unit Price</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
    <tr>
      <td>{{this.SKU_num}}</td>
      <td>{{this.desc_item}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.unit_of_measurement}}</td>
      <td>${{this.unit_price}}</td>
      <td>${{multiply this.quantity this.unit_price}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/suppliers" class="btn btn-secondary mt-3">‚Üê Back to Suppliers</a>
{{/block}}

{{/extends}}
