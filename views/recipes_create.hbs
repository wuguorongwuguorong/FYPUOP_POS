{{#extends "base"}}

{{#block "content"}}

<h2 class="mt-4 mb-4">Recipes Management</h2>

<div class="card mb-4">
    <div class="card-body">
        <form action="/recipes/create" method="POST" class="row g-3">
            <div class="col-md-4">
                <label for="ingredients" class="form-label">Ingredients</label>
                <input type="text" class="form-control" id="ingredients" name="ingredients" required>
            </div>

            <div class="col-md-2">
                <label for="quantity" class="form-label">Quantity</label>
                <input type="number" step="0.01" class="form-control" id="quantity" name="quantity" required>
            </div>

            <div class="col-md-2">
                <label for="rec_ing_uom" class="form-label">Unit</label>
                <input type="text" class="form-control" id="rec_ing_uom" name="rec_ing_uom" value="grams" required>
            </div>

            <div class="col-md-4">
                <label for="inv_item_id" class="form-label">Inventory Item</label>
                <select name="inv_item_id" id="inv_item_id" class="form-select" required>
                    <option value="" disabled selected>-- Choose Ingredient --</option>
                    {{#each inventoryItems}}
                    <option value="{{this.inv_item_id}}">{{this.inv_item_name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="col-md-4">
                <label for="menu_item_id" class="form-label">Menu Item</label>
                <select class="form-select" id="menu_item_id" name="menu_item_id" required>
                    <option value="" disabled selected>-- Select Menu Item --</option>
                    {{#each menuItems}}
                    <option value="{{this.menu_item_id}}">{{this.menu_item_name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="col-md-12">
                <label for="rec_desc" class="form-label">Recipe Instructions / Steps</label>
                <textarea class="form-control" id="rec_desc" name="rec_desc" rows="4" required
                    placeholder="Write preparation steps here..."></textarea>
            </div>

            <div class="col-md-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-success">âž• Add Recipe</button>
            </div>
        </form>
    </div>
</div>

{{/block}}

{{/extends}}