{{#extends "base"}}
{{#block "content"}}
<h2 class="mt-4 mb-3">Update Inventory - {{item.inv_item_name}}</h2>

<form action="/inventory/transactions/apply" method="POST">
  <input type="hidden" name="inv_item_id" value="{{item.inv_item_id}}">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Description</th>
        <th>Received Quantity</th>
        <th>Unit Price</th>
        <th>Order Date</th>
        <th>Select</th>
      </tr>
    </thead>
    <tbody>
      {{#each completedOrders}}
      <tr>
        <td>{{this.desc_item}}</td>
        <td>{{this.quantity}}</td>
        <td>${{this.unit_price}}</td>
        <td>{{formatDate this.supply_order_date}}</td>
        <td>
          <input type="radio" name="selected_order" value="{{this.order_item_id}}|{{this.quantity}}" required>

        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <button type="submit" class="btn btn-success mt-3">Apply Update</button>
</form>
{{/block}}
{{/extends}}
