{{#extends "base"}}

{{#block "content"}}

<h2 class="mt-3">Recipes Management</h2>
<br>
<div>
    <a href="/recipes/create" class="btn btn-success">Create New Recipe</a>
</div>
<br>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Ingredients</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Inventory Item</th>
            <th>Menu Item</th>
            <th>Updated</th>
            <th>Recipe Steps</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each recipes}}
        <tr>
            <td>{{this.ingredients}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.rec_ing_uom}}</td>
            <td>{{this.inv_item_name}}</td>
            <td>{{this.menu_item_name}}</td>
            <td>{{formatDate this.updated_at}}</td>
            <td style="white-space: pre-wrap;">{{this.rec_desc}}</td>
            <td>
                <a href="/recipes/{{this.recipe_id}}/update" class="btn btn-primary btn-sm">Edit</a>
                <a href="/recipes/{{this.srecipe_id}}/delete" class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this recipe?');">
                    Delete
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}