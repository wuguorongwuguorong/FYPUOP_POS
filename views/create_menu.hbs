{{#extends "base"}}

{{#block "content"}}
<h1>Create Menu Item</h1>

<form action="/menu/create" method="POST" enctype="multipart/form-data">
  <label>Item Name:</label>
  <input type="text" name="menu_item_name" required>

  <label>Item Price:</label>
  <input type="number" step="0.01" name="menu_item_price" required>

  <label>Image:</label>
  <input type="file" name="image_url" accept="image/*">

  <label>Is Active:</label>
  <select name="is_active">
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>

  <label>Shop:</label>
  <select name="shop_id">
    {{#each shops}}
      <option value="{{this.shop_id}}">{{this.shop_name}}</option>
    {{/each}}
  </select>

  <button type="submit">Create Menu Item</button>
</form>


{{/block}}

{{/extends}}