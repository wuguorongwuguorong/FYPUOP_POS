{{#extends "base"}}

{{#block "content"}}
<h2 class="mt-4 mb-4">Create Menu Item</h2>

<form action="/menu/create" method="POST" enctype="multipart/form-data" class="card p-4 shadow-sm">

  <div class="mb-3">
    <label for="shop_id" class="form-label">Shop</label>
    <select name="shop_id" id="shop_id" class="form-select" required>
      <option value="" disabled selected>-- Select Shop --</option>
      {{#each shops}}
        <option value="{{this.shop_id}}">{{this.shop_name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="mb-3">
    <label for="menu_item_name" class="form-label">Item Name</label>
    <input type="text" name="menu_item_name" id="menu_item_name" class="form-control" required>
  </div>

  <div class="mb-3">
    <label for="menu_item_price" class="form-label">Item Price</label>
    <input type="number" step="0.01" name="menu_item_price" id="menu_item_price" class="form-control" required>
  </div>

  <div class="mb-3">
    <label for="image_url" class="form-label">Image</label>
    <input type="file" name="image_url" id="image_url" class="form-control" accept="image/*">
  </div>

  <div class="mb-3">
    <label for="is_active" class="form-label">Is Active</label>
    <select name="is_active" id="is_active" class="form-select" required>
      <option value="1">Yes</option>
      <option value="0">No</option>
    </select>
  </div>

  <button type="submit" class="btn btn-success">Create Menu Item</button>
  <br>
  <a href="/menu" class="btn btn-secondary">Cancel</a>
</form>

{{/block}}

{{/extends}}
